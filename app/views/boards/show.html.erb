<div class = "container">
	<h2><%=  @board.name %></h2>
		<% post=@posts %>
		<% if post.empty? == false %>
			<% @posts.each do |post| %>
				<div class="col-lg-3 col-md-3 col-sm-6 col-xs-8">
			    	<p style="float: left;">
			    		<div class="box">
			    			<div class="pic">
				    			<% if post.user.image_url == "" %>
			            			<p><%= image_tag(post.user.avatar.url(:thumb), size: "100x100", :class => "board_posts_img") %></p>
			            		<% else %>
			            			<p><%= image_tag(post.user.image_url, size: "100x100" , :class => "board_posts_img") %></p>
			            		<% end %>
		            		</div>
							<h4><%= link_to post.title, board_post_path(@board,post) %></h4>
							<h6><%= post.name %></h6>
							<h6><%= post.description %></h6>
						</div>
					</p>
				</div>
			<% end %>
</div>
	<% else %>
		<p>Uh oh! No teachers have registered to teach this subject, yet.</p>
	<% end %>	
<div class="ahh">
<%= link_to 'Add Post', new_board_post_path(@board) %>
</div>
