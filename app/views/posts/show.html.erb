<% @post.image_url = current_user.image_url %>

<div>
    <p style="float: left;">
    	<% if @post.image_url == "" %>
	        <%= image_tag(@post.user.avatar.url(:thumb)) %></li>
	    <% else %>
	        <%= image_tag @post.image_url %></li>
	    <% end %>
    </p>
    <p>
	<%= @post.title %></br>
	<%= @post.user.name %></br>
	<%= @post.description %></br>
	<%= @post.user.phone_num %></br>
	<%= @post.user.email %></br>

</p>
</div>


<% if @post.user == current_user %>
<%= link_to 'Edit', edit_board_post_path(@board,@post) %> | <%= link_to 'Delete' , board_post_path(@board,@post),
	method: :delete,
	data: { confirm: 'Are you sure?' } %>
<% end %>

<p><%= link_to "Go Back to #{@board.name} Board", board_path(@board) %></p>